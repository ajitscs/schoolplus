<%= link_to "Home", root_path %>
<%= link_to "Create", new_user_path %>

<br><br>

<table class="table table-striped">
  <thead>
   <tr>
     <th>ID</th>
     <th>Name</th>
     <th>Email</th>
     <th>Role</th>
     <th>Phone</th>
     <th>School</th>
     <th>Actions</th>
     <br />
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role_name %></td>
        <td><%= user.contact %></td>
        <td><%= user.school.try(:title) %></td>
        <td>
          <%= link_to "Edit", edit_user_path(user.id) %>
          <%= link_to "Show", user_path(user.id) %>
          <%= link_to "Destroy", user_path(user.id), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>    
  </tbody>
</table>
